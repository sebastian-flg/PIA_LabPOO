<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="GymPOSSF564.controlador.Calendario">
    <center>
        <VBox spacing="10.0">
            <children>
                <TableView fx:id="tablaClases">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
                        <TableColumn fx:id="colInstructor" prefWidth="150.0" text="Instructor" />
                        <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
                        <TableColumn fx:id="colHora" prefWidth="100.0" text="Hora" />
                        <TableColumn fx:id="colCupo" prefWidth="80.0" text="Cupo" />
                    </columns>
                </TableView>
                
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="txtNombre" promptText="Nombre clase" />
                        <TextField fx:id="txtInstructor" promptText="Instructor" />
                        <DatePicker fx:id="dpFecha" promptText="Fecha" />
                        <TextField fx:id="txtHora" promptText="HH:MM" />
                        <TextField fx:id="txtCupo" promptText="Cupo máximo" />
                    </children>
                </HBox>
                
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnRegistrar" styleClass="button-primary" text="Registrar" />
                        <Button fx:id="btnActualizar" styleClass="button-primary" text="Actualizar seleccionado" />
                        <Button fx:id="btnEliminar" styleClass="button-primary" text="Eliminar seleccionado" />
                        <Button fx:id="btnGuardar" styleClass="button-primary" text="Guardar calendario" />
                        <Button fx:id="btnRegresar" styleClass="button-secundary" text="Regresar al menú de opciones" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </center>
</BorderPane>