<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane fx:id="menu_inventario" prefHeight="557.0" prefWidth="750"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GymPOSSF564.controlador.InventarioMenu">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="10">

            <Label text="Opciones Inventario">
                <font>
                    <Font size="22.0" />
                </font>
            </Label>

            <HBox fx:id="barraOpciones"
                  alignment="CENTER"
                  spacing="20"
                  styleClass="barra-opciones-superior">

                <Button fx:id="registrar" text="Registrar Producto"
                        styleClass="button-primary" prefHeight="55" />

                <Button fx:id="actualizar" text="Actualizar Producto"
                        styleClass="button-primary" prefHeight="55" />

                <Button fx:id="buscar" text="Buscar Producto"
                        styleClass="button-primary" prefHeight="55" />

                <Button fx:id="eliminar" text="Eliminar Producto"
                        styleClass="button-primary" prefHeight="55" />

                <Button fx:id="entradaSalida" text="Ventas"
                        styleClass="button-primary" prefHeight="55" />

                <Button fx:id="salir" text="Salir"
                        styleClass="button-secundary" prefHeight="55" />

            </HBox>

        </VBox>
    </top>

    <center>
        <VBox fx:id="contenido"
              alignment="CENTER"
              prefHeight="500.0"
              prefWidth="420.0"
              spacing="10" />
    </center>

</BorderPane>