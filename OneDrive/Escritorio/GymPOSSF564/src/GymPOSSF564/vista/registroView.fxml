<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GymPOSSF564.controlador.Registro">
    <top>
        <BorderPane prefHeight="80.0" prefWidth="1000.0" style="-fx-background-color: #2C3E50;" BorderPane.alignment="CENTER">
            <bottom>
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Registrar Nuevo Usuario" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </bottom>
            <left>
                <Button mnemonicParsing="false" onAction="#regresarScreen" styleClass="button-secundary" text="Regresar" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="12.0" />
                    </font>
                    <BorderPane.margin>
                        <Insets left="15.0" top="15.0" />
                    </BorderPane.margin>
                </Button>
            </left>
        </BorderPane>
    </top>
    <center>
        <ScrollPane fitToWidth="true" prefViewportHeight="550.0" prefViewportWidth="900.0" style="-fx-background: #ECF0F1;">
            <content>
                <VBox alignment="CENTER_LEFT" prefHeight="550.0" prefWidth="700.0" spacing="15">
                    <children>
                        <Label style="-fx-text-fill: #2C3E50; -fx-font-weight: bold;" text="Informacion Personal">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>

                        <Label style="-fx-text-fill: #2C3E50;" text="Nombre">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="nombre" onKeyReleased="#validarNombres" prefHeight="35.0" prefWidth="500.0" promptText="Ingrese el nombre" styleClass="text-field"/>

                        <Label style="-fx-text-fill: #2C3E50;" text="Apellidos">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="apellidos" onKeyReleased="#validarNombres" prefHeight="35.0" prefWidth="500.0" promptText="Ingrese los apellidos"/>

                        <Label style="-fx-text-fill: #2C3E50;" text="Edad">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="edad" onKeyReleased="#validarEdad" prefHeight="35.0" prefWidth="500.0" promptText="Ingrese la edad" styleClass="text-field"/>

                        <Label style="-fx-text-fill: #2C3E50;" text="Direccion">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="direccion" onKeyReleased="#validarDireccion" prefHeight="35.0" prefWidth="500.0" promptText="Ingrese la direccion"/>

                        <Label style="-fx-text-fill: #2C3E50; -fx-font-weight: bold;" text="Informacion Laboral">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>

                        <Label style="-fx-text-fill: #2C3E50;" text="ID">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="id" onKeyReleased="#validarID" prefHeight="35.0" prefWidth="500.0" promptText="Ingrese el ID unico"/>

                        <Label style="-fx-text-fill: #2C3E50;" text="Puesto">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ChoiceBox fx:id="puesto" prefWidth="200.0" style="-fx-font-size: 14px;"/>

                        <Label style="-fx-text-fill: #2C3E50;" text="Salario">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="salario" onKeyReleased="#validarSalario" prefHeight="35.0" prefWidth="500.0" promptText="Ingrese el salario"/>

                        <Label style="-fx-text-fill: #2C3E50; -fx-font-weight: bold;" text="Credenciales de Acceso">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>

                        <Label style="-fx-text-fill: #2C3E50;" text="Contraseña">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="contrasena" onKeyReleased="#validarContrasena" prefHeight="35.0" prefWidth="500.0" promptText="Cree una contraseña"/>

                        <Button mnemonicParsing="false" onAction="#registrarUsuario" styleClass="button-primary" text="Registrar Usuario">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="30.0" bottom="20.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="50.0" right="50.0" top="20.0" bottom="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>